<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter>
    <filter-name>authFilter</filter-name>
    <filter-class>org.opengroup.osdu.auth.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>authFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>authServlet</servlet-name>
    <servlet-class>org.opengroup.osdu.auth.CallbackServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>authServlet</servlet-name>
    <url-pattern>/auth/callback</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>searchServlet</servlet-name>
    <servlet-class>org.opengroup.osdu.search.SearchServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>searchServlet</servlet-name>
    <url-pattern>/find</url-pattern>
  </servlet-mapping>
</web-app>
